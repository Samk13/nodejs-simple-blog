<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')%>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mx-auto h-screen bg-gray-200 rounded-lg">
        <div class="text-lg font-bold space-y-2 m-3 ">
            <h2 class="font-black text-3xl text-center">All blogs</h2>
            <% if( blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <h3 class="text-lg"><%= blog.title%></h3>
                    <p class="font-thin"><%= blog.snippet %></p>
                <% })%>
            <% } else {%>
                <p>there is no blogs to display</p>
            <% }%>
        </div>
    </div>
    <%- include('./partials/footer.ejs')%>
</body>
</html>