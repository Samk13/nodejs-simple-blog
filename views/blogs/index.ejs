<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')%>
<body class="bg-gray-700">
    <%- include('../partials/nav.ejs') %>
    <div class="container mx-auto h-screen bg-gray-200 rounded-lg p-4 m-3">
        <h2 class="text-6xl my-5 m-3">All blogs</h2>
        <div class="space-y-2 m-3 ">
            <% if( blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="border-solid border border-gray-600 p-3 rounded-lg hover:shadow hover:bg-green-500 hover:text-gray-200">
                        <a href="/blogs/<%= blog._id %>">
                            <h3 class="text-lg font-bold"><%= blog.title%></h3>
                            <p class="font-thin"><%= blog.snippet %></p>
                        </a>
                    </div>
                <% })%>
            <% } else {%>
                <p>there is no blogs to display</p>
            <% }%>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>
</body>
</html>